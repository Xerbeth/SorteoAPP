<h2>Personas</h2>

<div>
    <!-- Button to Open the Modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bd-example-modal-lg" style="float: right;">Registrar personas</button>
</div>

<!-- The Modal -->
<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header" ">
                <h4 class="modal-title">Registro de personas</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">

                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group column">
                                <p><label for="exampleFormControlSelect1">Tipo de documento</label></p>
                                <select class="form-control" id="TipoDocumento" name="TipoDocumento">
                                    <option value="CC">CC</option>
                                    <option value="CI">CI</option>
                                    <option value="TI">TI</option>
                                    <option value="TP">TP</option>
                                    <option value="RC">RC</option>
                                    <option value="CE">CE</option>
                                    <option value="CI">CI</option>
                                    <option value="DNI">DNI</option>
                                    <option value="DUI">DUI</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group column">
                                <p><label for="formControlNumeroDocumento">Número de documento</label></p>
                                <input class="form-control" type="number" value="" maxlength="10" id="NumeroDocumento" name="NumeroDocumento" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <p><label for="formPrimerNombre">Primer nombre</label></p>
                                <input class="form-control" type="text" value="" placeholder="Primer nombre" id="PrimerNombre" name="PrimerNombre" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <p><label for="formSegundoNombre">Segundo nombre</label></p>
                                <input class="form-control" type="text" value="" placeholder="Segundo nombre" id="SegundoNombre" name="SegundoNombre" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <p><label for="formPrimerApellido">Primer apellido</label></p>
                                <input class="form-control" type="text" value="" placeholder="Primer apellido" id="PrimerApellido" name="PrimerApellido" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <p><label for="formSegundoApellido">Segundo apellido</label></p>
                                <input class="form-control" type="text" value="" placeholder="Segundo apellido" id="SegundoApellido" name="SegundoApellido" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <p><label for="formControlSexo">Sexo</label></p>
                                <select class="form-control" id="Sexo" name="Sexo">
                                    <option value="Masculino">Masculino</option>
                                    <option value="Femenino">Femenino</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <p><label for="formControlFechaNacimiento">Fecha nacimiento</label></p>
                                <input class="form-control" type="date" id="FechaNacimiento" name="trip-start"
                                       value="2019-01-01" min="1919-01-01" max="2019-10-29">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <input type="button" value="Registrar" onclick="Personas.validateForm()" class="btn btn-success" />
                        </div>
                    </div>
                </div>

            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
            </div>

        </div>
    </div>
</div>

<br /><br />
<hr>
@*Grid de personas*@
<table class="table table-striped w-auto">

    <!--Table head-->
    <thead>
        <tr>
            <th>Item</th>
            <th>Tipo documento</th>
            <th>Numero documento</th>
            <th>Primer nombre</th>
            <th>Segundo nombre</th>
            <th>Primer apellido</th>
            <th>Segundo apellido</th>
            <th>Sexo</th>
            <th>Fecha nacimiento</th>
            <th>Fecha de registro</th>
            <th>Acción</th>
        </tr>
    </thead>
    <!--Table head-->
    <!--Table body-->
    <tbody>
        @foreach (var persona in Model)
            {
        <tr class="table-info">
            <th scope="row">@persona.Item</th>
            <th scope="row">@persona.TipoDocumento</th>
            <td>@persona.NumeroDocumento</td>
            <td>@persona.PrimerNombre</td>
            <td>@persona.SegunoNombre</td>
            <td>@persona.PrimerApellido</td>
            <td>@persona.SegundoApellido</td>
            <td>@persona.Sexo</td>
            <td>@persona.FechaNacimiento</td>
            <td>@persona.FechaNacimiento</td>
            <td>
                <button type="button" class="btn btn-danger">
                    <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span> Eliminar
                </button>
                @*<button type="button" class="btn btn-danger" data-dismiss="modal">Eliminar</button>*@
            </td>
        </tr>
        }

    </tbody>
    <!--Table body-->

</table>

<script type="text/javascript">
    Personas.start();
</script>